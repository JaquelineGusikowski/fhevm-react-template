# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# IMPORTANT: Never commit your actual private key to version control
# This file contains example values - copy to .env and update with real values

# Private Key Configuration
# Get your private key from MetaMask: Account Details > Export Private Key
# Remove the '0x' prefix when adding it here
PRIVATE_KEY=your_private_key_without_0x_prefix

# ==============================================
# NETWORK CONFIGURATION
# ==============================================

# Sepolia Testnet RPC
# Default: https://rpc.sepolia.org
# Alternative: https://sepolia.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Ethereum Mainnet RPC (for production deployment)
# Default: https://eth.llamarpc.com
# Alternative: https://mainnet.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://eth.llamarpc.com

# Local Network (for development)
LOCAL_RPC_URL=http://127.0.0.1:8545

# ==============================================
# VERIFICATION & MONITORING
# ==============================================

# Etherscan API Key
# Get your API key from: https://etherscan.io/myapikey
# Required for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Coinmarketcap API Key (optional)
# For gas price calculations in gas reporter
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ==============================================
# GAS & PERFORMANCE OPTIMIZATION
# ==============================================

# Gas Reporting
# Set to 'true' to enable gas usage reporting during tests
REPORT_GAS=false

# Gas Price (in Gwei)
# Used for deployment transactions
# Leave empty for automatic gas price detection
GAS_PRICE=

# Gas Limit
# Maximum gas for transactions (default: auto)
GAS_LIMIT=

# ==============================================
# COMPILER OPTIMIZATION
# ==============================================

# Solidity Optimizer
# Set to 'true' to enable compiler optimizations
# Higher runs = more expensive deployment, cheaper execution
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Subsidy Authority Address
# The address that will have admin privileges
# If not set, defaults to deployer address
SUBSIDY_AUTHORITY=

# Pauser Role Address (optional)
# Address that can pause contract in emergency
# Multiple addresses separated by comma
PAUSER_ADDRESSES=

# Emergency Contact
# Email or contact for security issues
SECURITY_CONTACT=security@example.com

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Initial Subsidy Budget (in ETH)
# Amount to fund the contract on deployment
INITIAL_BUDGET=10

# Distribution Period Duration (in seconds)
# Default: 7 days = 604800 seconds
DISTRIBUTION_PERIOD_DURATION=604800

# Maximum Farmers Per Period
# Limit to prevent DoS attacks
MAX_FARMERS_PER_PERIOD=1000

# ==============================================
# FRONTEND CONFIGURATION (if applicable)
# ==============================================

# Frontend Port
FRONTEND_PORT=8080

# API URL
API_URL=http://localhost:3000

# Enable Debug Mode
DEBUG_MODE=false

# ==============================================
# CI/CD CONFIGURATION
# ==============================================

# Enable strict mode in CI
CI_STRICT_MODE=true

# Coverage threshold
COVERAGE_THRESHOLD=80

# ==============================================
# DEVELOPMENT OPTIONS
# ==============================================

# Network for local development
DEFAULT_NETWORK=hardhat

# Enable verbose logging
VERBOSE=false

# Mock FHE operations (for testing)
MOCK_FHE=true
